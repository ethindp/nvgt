#include "speech.nvgt"

key_code[] keys;
bool escape_was_pressed = false;

void main() {
	show_window("Keys Pressed");

	while (!escape_was_pressed) {
		wait(5);
		keys = keys_pressed();

		if (keys.length() > 0) {
			for (uint k = 0; k < keys.length(); k++) {
				if (keys.find(KEY_ESCAPE) > -1) {
					escape_was_pressed = true;
				}
				speak(keys[k], false);
			}
		}
	}

	exit();
}
